FROM ubuntu:22.04
LABEL maintainer="Mario Konrad <mario.konrad@gmx.net>"

RUN apt-get update \
 && apt-get install -y \
		apt-utils \
		wget curl \
		bzip2 xz-utils \
		tar \
		binutils \
		make ninja-build \
		git-core \
		libc-dev libgcc1 libgcc-10-dev \
		libtinfo5 \
 && rm -fr /var/lib/apt/lists/*
RUN mkdir -p /opt

# install clang
COPY install-clang.sh /tmp/
RUN /tmp/install-clang.sh "16.0.4"
ENV CXX=/usr/bin/clang++
ENV CC=/usr/bin/clang
ENV CXXFLAGS=-stdlib=libc++
ENV LDFLAGS=-stdlib=libc++
ENV LD_LIBRARY_PATH=/usr/lib/x86_64-unknown-linux-gnu

# install cmake
COPY install-cmake.sh /tmp/
RUN /tmp/install-cmake.sh "4.2.0"
ENV PATH /opt/local/cmake/bin:$PATH

# add user
RUN useradd --groups users -M --uid 1000 user
USER user
